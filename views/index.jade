extends layout

block content
  div.container
    div.col-md-6.col-md-offset-3
      h1= title
      p Welcome to #{title}
      form(action='/test/submit', method='post')
        div.form-group
          label(for='id') Numero:
          input(name='id', type='number', id='id').form-control
        input(type='submit', value='Submit').btn.btn-primary